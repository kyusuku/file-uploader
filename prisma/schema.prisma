generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id       String   @id @default(uuid())
  username String   @unique @db.VarChar(255)
  password String   @db.VarChar(255)
  folder   Folder[]
  file     File[]
}

model Folder {
  id     String  @id @default(uuid())
  name   String
  files  File[]
  userId String?
  user   User?   @relation(fields: [userId], references: [id])

  @@unique([name, userId])
}

model File {
  id         String   @id @default(uuid())
  name       String   
  size       Int
  uploadedAt DateTime @default(now())
  fileUrl    String
  data       Bytes?
  folderId   String?
  folder     Folder?  @relation(fields: [folderId], references: [id])
  userId     String?
  user       User?    @relation(fields: [userId], references: [id])

  @@unique([name, userId])
}
